<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Enter_number"
    android:background="#fff"
    android:orientation="vertical">

  <com.hbb20.CountryCodePicker android:id="@+id/ccp" android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:textSize="12dp"
      android:padding="12dp"
      android:layout_centerVertical="true"
      android:textStyle="bold"
      android:textColor="#000"
      android:background="@drawable/textview_back"
      android:layout_marginStart="20dp"/>

  <EditText
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:hint="Phone Number"
    android:layout_toEndOf="@id/ccp"
    android:background="@drawable/rounded_edittext"
    android:layout_centerVertical="true"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="20dp"
    android:inputType="phone"
    android:id="@+id/phone_number"
    android:padding="20dp"
    />

  <Button
    android:layout_width="match_parent"
    android:id="@+id/verify"
    android:layout_height="wrap_content"
    android:layout_below="@+id/phone_number"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="25dp"
    android:text="S E N D    C O D E"
    android:textColor="#fff"
    android:background="@drawable/rounded_button"
    />


</RelativeLayout>